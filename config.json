{
  "name": "main_config",
  "device": "cuda",
  "random_seed": 42,
  "melspectrogram": {
    "sample_rate":  22050,
    "win_length": 1024,
    "hop_length": 256,
    "n_fft": 1024,
    "f_min": 0,
    "f_max": 8000,
    "n_mels": 80
  },
  "data": {
    "root": "./data",
    "split": 0.95,
    "train": {
      "batch_size": 4,
      "num_workers": 1,
      "shuffle": false
    },
    "val": {
      "batch_size": 8,
      "num_workers": 1,
      "shuffle": true
    }
  },
  "model": {
    "vocab_size": 51
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 3e-4
    }
  },
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 100,
      "epochs": 50,
      "anneal_strategy": "cos",
      "max_lr": 4e-3,
      "pct_start": 0.2
    }
  },
  "trainer": {
    "overfit": true,
    "n_epoch": 100,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "early_stop": 100,
    "len_epoch": 400,
    "visualize": "tensorboard",
    "wandb_project": "FastSpeech"
  }
}
